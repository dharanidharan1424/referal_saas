generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  OWNER
  STAFF
}

enum RewardStatus {
  LOCKED
  UNLOCKED
  GIVEN
}

model User {
  id           String   @id @default(uuid())
  name         String?
  email        String   @unique
  passwordHash String
  role         Role     @default(OWNER)
  createdAt    DateTime @default(now())
  gyms         Gym[]
}

model Gym {
  id        String     @id @default(uuid())
  name      String
  location  String?
  ownerId   String
  owner     User       @relation(fields: [ownerId], references: [id])
  createdAt DateTime   @default(now())
  campaigns Campaign[]
  members   Member[]
}

model Campaign {
  id            String         @id @default(uuid())
  gymId         String
  gym           Gym            @relation(fields: [gymId], references: [id])
  title         String
  rewardName    String
  targetJoins   Int
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  referralCodes ReferralCode[]
}

model Member {
  id            String         @id @default(uuid())
  gymId         String
  gym           Gym            @relation(fields: [gymId], references: [id])
  name          String
  phone         String
  createdAt     DateTime       @default(now())
  referralCodes ReferralCode[]

  @@unique([gymId, phone])
}

model ReferralCode {
  id            String         @id @default(uuid())
  memberId      String
  member        Member         @relation(fields: [memberId], references: [id])
  campaignId    String
  campaign      Campaign       @relation(fields: [campaignId], references: [id])
  code          String         @unique
  joinCount     Int            @default(0)
  createdAt     DateTime       @default(now())
  referralJoins ReferralJoin[]
  rewards       Reward[]
}

model ReferralJoin {
  id                String       @id @default(uuid())
  referralCodeId    String
  referralCode      ReferralCode @relation(fields: [referralCodeId], references: [id])
  joinedMemberPhone String
  verifiedByStaff   Boolean      @default(false)
  verifiedAt        DateTime?
}

model Reward {
  id             String       @id @default(uuid())
  referralCodeId String
  referralCode   ReferralCode @relation(fields: [referralCodeId], references: [id])
  status         RewardStatus @default(LOCKED)
  unlockedAt     DateTime?
  givenAt        DateTime?
}
